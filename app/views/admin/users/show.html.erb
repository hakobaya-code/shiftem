
<%= render 'layouts/headerhome' %>
<div class="container">
  <h2><%= @user.name %></h2>
  <p><%= @user.ptj ? 'アルバイト' : '社員' %></p>
  <p>時給: <%= @user.wage %>円</p>
  <p>状態: <%= @user.retire ? '退職' : '在籍中' %></p>

  <%= link_to '編集', edit_admin_user_path(@user), class: 'btn btn-allusers' %>
  <%= button_to '削除', admin_user_path(@user), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-allusers' %>
  <%= link_to '一覧に戻る', admin_users_path, class: 'btn btn-allusers' %>
</div>